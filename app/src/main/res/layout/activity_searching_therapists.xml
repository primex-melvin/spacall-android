<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/activity_searching_therapists.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".SearchingTherapistsActivity">

    <!-- Main Map Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- OpenStreetMap View -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Top Header Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Top Bar -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/back_button_background"
                    android:src="@drawable/ic_back_arrow"
                    android:contentDescription="@string/back"/>

                <!-- Reset Button -->
                <ImageButton
                    android:id="@+id/resetButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/reset_button_background"
                    android:src="@drawable/ic_reset"
                    android:contentDescription="@string/reset"/>

            </RelativeLayout>

            <!-- Title -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/searching_massage_therapists"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Emergency Button -->
        <Button
            android:id="@+id/emergencyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/emergency_button_background"
            android:drawableStart="@drawable/ic_emergency"
            android:drawablePadding="8dp"
            android:text="@string/emergency"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="4dp"/>

        <!-- List View Button -->
        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="280dp"
            android:background="@drawable/floating_button_background"
            android:src="@drawable/ic_list"
            android:contentDescription="@string/list_view"
            android:elevation="8dp"/>

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="280dp"
            android:background="@drawable/floating_button_background"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/home"
            android:elevation="8dp"/>

    </FrameLayout>

    <!-- Bottom Sheet with Therapists List -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_sheet_rounded_background"
        android:elevation="12dp"
        android:fillViewport="true"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="200dp"
        app:behavior_hideable="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Bottom Sheet Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bottom_sheet_handle"/>

            <!-- Booking Title -->
            <TextView
                android:id="@+id/bookingTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/booking_best_service"
                android:textColor="@color/gold"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <!-- Description -->
            <TextView
                android:id="@+id/bookingDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/processing_request_description"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"/>

            <!-- Therapists RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/therapistsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>