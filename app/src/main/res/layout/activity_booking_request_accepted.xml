<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/activity_booking_request_accepted.xml -->
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".BookingRequestAcceptedActivity">

    <!-- Main Map Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- OpenStreetMap View -->
        <org.osmdroid.views.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <!-- Top Header with Therapist Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/header_gradient_background"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="24dp">

            <!-- Top Bar with Back and Reset -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- Back Button -->
                <ImageButton
                    android:id="@+id/backButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/back_button_background"
                    android:src="@drawable/ic_back_arrow"
                    android:contentDescription="@string/back"/>

                <!-- Reset Button -->
                <ImageButton
                    android:id="@+id/resetButton"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/reset_button_background"
                    android:src="@drawable/ic_reset"
                    android:contentDescription="@string/reset"/>

            </RelativeLayout>

            <!-- Title with Therapist Name -->
            <TextView
                android:id="@+id/titleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:text="@string/request_accepted_title"
                android:textColor="@color/text_primary"
                android:textSize="26sp"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Emergency Button -->
        <Button
            android:id="@+id/emergencyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|start"
            android:layout_marginStart="24dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/emergency_button_background"
            android:drawableStart="@drawable/ic_emergency"
            android:drawablePadding="8dp"
            android:text="@string/emergency"
            android:textColor="@color/text_primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:elevation="4dp"/>

        <!-- List View Button -->
        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="24dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/floating_button_background"
            android:src="@drawable/ic_list"
            android:contentDescription="@string/list_view"
            android:elevation="8dp"/>

        <!-- Home Button -->
        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="180dp"
            android:background="@drawable/floating_button_background"
            android:src="@drawable/ic_home"
            android:contentDescription="@string/home"
            android:elevation="8dp"/>

        <!-- Bottom Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Request Accepted Title -->
                <TextView
                    android:id="@+id/requestAcceptedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/request_accepted"
                    android:textColor="@color/gold_primary"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <!-- Description -->
                <TextView
                    android:id="@+id/requestAcceptedDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@string/request_accepted_message"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp"/>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </FrameLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>