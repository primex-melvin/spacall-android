<?xml version="1.0" encoding="utf-8"?>
<!-- app/src/main/res/layout/activity_therapist_arrived.xml -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="24dp"
    tools:context=".TherapistArrivedActivity">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_back_arrow"
        android:contentDescription="@string/back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Reset Button -->
    <ImageButton
        android:id="@+id/resetButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/ic_reset"
        android:contentDescription="@string/reset"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Map Illustration Container -->
    <FrameLayout
        android:id="@+id/mapIllustrationContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/backButton"
        app:layout_constraintBottom_toTopOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.3">

        <!-- Outer Circle (Light Gray) -->
        <View
            android:layout_width="320dp"
            android:layout_height="320dp"
            android:layout_gravity="center"
            android:background="@drawable/arrival_outer_circle"/>

        <!-- Inner Circle (Very Light Gray) -->
        <View
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_gravity="center"
            android:background="@drawable/arrival_inner_circle"/>

        <!-- Map Background Shapes Container -->
        <FrameLayout
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center">

            <!-- Simplified map road/area shapes (decorative) -->
            <View
                android:layout_width="80dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:background="@drawable/map_shape_background"
                android:alpha="0.3"/>

            <View
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="50dp"
                android:background="@drawable/map_shape_background"
                android:alpha="0.3"/>

            <View
                android:layout_width="50dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|start"
                android:layout_marginStart="30dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/map_shape_background"
                android:alpha="0.3"/>
        </FrameLayout>

        <!-- Red Marker (User/Left Position) -->
        <ImageView
            android:id="@+id/redMarker"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/ic_location_red_marker"
            android:contentDescription="@string/red_marker"/>

        <!-- Blue Marker (Therapist/Right Position) -->
        <ImageView
            android:id="@+id/blueMarker"
            android:layout_width="48dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_location_blue_marker"
            android:contentDescription="@string/blue_marker"/>

        <!-- Dashed Route Line Path -->
        <ImageView
            android:id="@+id/dashedRoutePath"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:src="@drawable/dashed_route_path"
            android:contentDescription="@string/dashed_route"/>

        <!-- Decorative Stars/Sparkles -->
        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="top|start"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/ic_sparkle_blue"
            android:contentDescription="@string/avatar_icon"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="40dp"
            android:src="@drawable/ic_sparkle_gold"
            android:contentDescription="@string/avatar_icon"/>

        <ImageView
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_dot_red"
            android:contentDescription="@string/avatar_icon"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="bottom|start"
            android:layout_marginStart="80dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/ic_dot_gray"
            android:contentDescription="@string/avatar_icon"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="120dp"
            android:src="@drawable/ic_dot_gray"
            android:contentDescription="@string/avatar_icon"/>

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/ic_dot_gray"
            android:contentDescription="@string/avatar_icon"/>

    </FrameLayout>

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/your_therapist_has_arrived"
        android:textColor="@color/text_primary"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/mapIllustrationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/descriptionText"/>

    <!-- Description Text -->
    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_to_begin_session"
        android:textColor="@color/text_secondary"
        android:textSize="16sp"
        android:textAlignment="center"
        android:gravity="center"
        android:lineSpacingExtra="4dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/startSessionButton"/>

    <!-- Start Session Button -->
    <Button
        android:id="@+id/startSessionButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_background_gold"
        android:text="@string/start_session"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="18dp"
        android:paddingBottom="18dp"
        app:layout_constraintTop_toBottomOf="@id/descriptionText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>